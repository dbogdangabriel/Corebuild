@page "/SyncfusionTable"
@using BlazorSyncfusion.Models


<h1>Syncfusion DataTable</h1>
<div class="col-lg-12 control-section">

    <div class="content-wrapper">
        <div class="row">

            <SfGrid DataSource="@Orders" AllowPaging="true"
                    AllowReordering="true"
                    Toolbar="@ToolbarItems">
                <GridEditSettings AllowAdding="true" AllowEditing="true" AllowDeleting="true"></GridEditSettings>
                <GridColumns>
                    <GridColumn Field=@nameof(Order.OrderID)
                                HeaderText="Order ID"
                                IsPrimaryKey="true"
                                CustomAttributes="@(new Dictionary<string, object>(){ { "class", "e-attr" }})"
                                Width="120"
                                AllowReordering="false">
                    </GridColumn>

                    <GridColumn Field=@nameof(Order.CustomerID)
                                HeaderText="Customer Name"
                                CustomAttributes="@(new Dictionary<string, object>(){ { "class", "e-attr" }})"
                                Width="150">
                    </GridColumn>

                    <GridColumn Field=@nameof(Order.OrderDate)
                                HeaderText=" Order Date"
                                CustomAttributes="@(new Dictionary<string, object>(){ { "class", "e-attr" }})"
                                Format="d" Type="ColumnType.Date"
                                EditType="EditType.DatePickerEdit"
                                Width="130">
                    </GridColumn>

                    <GridColumn Field=@nameof(Order.Freight)
                                HeaderText="Freight"
                                CustomAttributes="@(new Dictionary<string, object>(){ { "class", "e-attr" }})"
                                Format="C2"
                                Width="120">
                    </GridColumn>

                    <GridColumn Field=@nameof(Order.ShipCountry)
                                HeaderText="ShipCountry"
                                CustomAttributes="@(new Dictionary<string, object>(){ { "class", "e-attr" }})"
                                Width="120">
                    </GridColumn>

                    <GridColumn Field=@nameof(Order.Verified)
                                DisplayAsCheckBox="true"
                                Width="50"
                                AllowReordering="false">
                    </GridColumn>
                </GridColumns>
            </SfGrid>
        </div>
    </div>
</div>



<style>


    .e-grid .e-headercell {
        background-color: darkturquoise;
    }

    .e-headercell {
        color: slategray;
        font-size: 1.5rem;
        font-weight: bold;
        text-align: center;
    }

    .e-grid .e-gridheader .e-headercell.e-attr .e-headercelldiv {
        text-align: center !important;
    }

    .e-attr {
        text-align: center !important;
    }
</style>
